# ===== BASE DE DATOS =====
POSTGRES_DB=sentinel_db           # Nombre de la base de datos
POSTGRES_USER=sentinel_user       # Usuario de PostgreSQL  
POSTGRES_PASSWORD=sentinel_pass   # Password de PostgreSQL
POSTGRES_HOST=postgres            # Nombre del contenedor (Docker)
POSTGRES_PORT=5432               # Puerto estándar PostgreSQL

# ===== PUERTOS SERVICIOS =====
N8N_PORT=5678                    # n8n web interface
PERSISTENCE_PORT=8000            # Servicio persistencia
CLASSIFICATION_PORT=8001         # Servicio clasificación

# ===== APIs EXTERNAS (para IA) =====
OPENAI_API_KEY=sk-proj-...       # ChatGPT (fallback para casos complejos)
ANTHROPIC_API_KEY=sk-ant-...     # Claude (fallback)

# ===== CONFIGURACIÓN N8N =====
N8N_BASIC_AUTH_ACTIVE=true       # Seguridad básica
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# ===== DISCORD =====
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...  # Para notificaciones

# ===== RUTAS ARCHIVOS =====
UPLOADS_DIR=./uploads            # Donde se suben archivos
OUTPUTS_DIR=./outputs           # Donde se generan resultados
LOGS_DIR=./logs                 # Logging del sistema